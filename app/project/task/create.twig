<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">
        <span class="glyphicon glyphicon-plus"></span>
        Eine neue Aufgabe erstellen
    </h4>
</div>
<div class="modal-body">
    <form method="post" action="{{ urlFor('/project/task/insert', {ID:project.ID}) }}" class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-7">
                <label for="task" class="col-sm-2 control-label">Aufgabenbeschreibung</label>
                <textarea name="task" id="task" class="form-control" rows="5"></textarea>
            </div>

            <div class="col-sm-5">
                <label for="items" class="col-sm-2 control-label">Zielkarte</label>
                <select name="items" id="items" class="form-control">
                    {% for item in items %}
                        <option value="{{item.ID}}">{{item.name}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <div class="col-sm-4">
                <button type="button" class="btn btn-default btn-group btn-group-justified" data-dismiss="modal">
                    <i class="glyphicon glyphicon-remove"></i>
                    Abbrechen</button>
            </div>
            <div class="col-sm-offset-4 col-sm-4">
                <button type="submit" class="btn btn-success btn-group btn-group-justified">
                    <i class="glyphicon glyphicon-plus"></i>
                    Aufgabe erstellen</button>
            </div>
        </div>
        <br/>
    </form>
</div>
